<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


  <Transition
      motion:constraintSetEnd="@+id/end"
      motion:constraintSetStart="@id/start"
      motion:duration="1000">

    <OnSwipe
        motion:dragDirection="dragUp"
        motion:touchRegionId="@id/linearLayout" />


  </Transition>

  <ConstraintSet android:id="@+id/start">

    <Constraint
        android:id="@+id/linearLayout"
        android:elevation="@dimen/dimen_8dp"
        motion:layout_constraintEnd_toEndOf="parent"
        motion:layout_constraintStart_toEndOf="@+id/music_player_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        motion:layout_constraintBottom_toBottomOf="@+id/nav_host_fragment_container"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        motion:deriveConstraintsFrom="@id/linearLayout"
        motion:visibilityMode="ignore" />
  </ConstraintSet>

  <ConstraintSet android:id="@+id/end">
    <Constraint
        android:id="@+id/bottomNavigationView"
        motion:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0"
        motion:layout_constraintBottom_toBottomOf="parent"
        motion:layout_constraintStart_toStartOf="parent" />
    <Constraint
        android:id="@+id/nav_host_fragment_container"
        motion:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        motion:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        motion:layout_constraintTop_toTopOf="parent"
        motion:layout_constraintStart_toStartOf="parent"
        motion:layout_constraintVertical_bias="1.0"
        android:alpha="0" />
    <Constraint
        android:layout_height="200dp"
        android:layout_width="200dp"
        motion:layout_constraintStart_toStartOf="parent"
        motion:layout_constraintTop_toTopOf="parent"
        android:id="@+id/preview"
        motion:layout_constraintEnd_toEndOf="parent"
        motion:layout_constraintBottom_toTopOf="@+id/seekBar" />
    <Constraint
        android:layout_height="wrap_content"
        android:id="@+id/music_player_title"
        motion:layout_constraintTop_toBottomOf="@+id/preview"
        motion:layout_constraintEnd_toEndOf="parent"
        motion:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp"
        android:layout_marginTop="8dp" />
    <Constraint
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"
        motion:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:id="@+id/linearLayout"
        android:visibility="visible"
        motion:layout_constraintTop_toBottomOf="@+id/seekBar"
        motion:layout_constraintStart_toStartOf="@+id/seekBar"
        android:layout_marginTop="8dp" />
    <Constraint
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        motion:layout_constraintStart_toStartOf="parent"
        motion:layout_constraintEnd_toEndOf="@id/bottomNavigationView"
        android:layout_marginTop="8dp"
        motion:layout_constraintHorizontal_bias="1.0"
        motion:layout_constraintTop_toBottomOf="@+id/guideline2" />
    <Constraint
        android:id="@+id/player_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        motion:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        motion:layout_constraintTop_toTopOf="parent" />
  </ConstraintSet>
</MotionScene>